<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeveloperRoadMap.Views.StepsListPage"
             Title="Steps">
    <ContentPage.ToolbarItems>
        <ToolbarItem Clicked="StepComplete" Text="Step Complete">


        </ToolbarItem>

    </ContentPage.ToolbarItems>
   
    <ListView x:Name="listView" Margin="20">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="20,0,0,0" Orientation="Horizontal">
                        <Label HorizontalOptions="StartAndExpand" Text="{Binding Description}"/>


                    </StackLayout>

                </ViewCell>

            </DataTemplate>

        </ListView.ItemTemplate>


    </ListView>

</ContentPage>
